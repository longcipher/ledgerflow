# LedgerFlow CLI Environment Variables
# Copy this file to .env and fill in your values

# RPC endpoint URL for the blockchain network
RPC_URL=https://sepolia.unichain.org

# Your wallet's private key (hex format, with or without 0x prefix)
# WARNING: Never commit your real private key to version control!
PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# PaymentVault contract address
VAULT_ADDRESS=0x742d35Cc6634C0532925a3b8D11C5d2B7e5B3F6E

# Example order ID (32 bytes hex)
ORDER_ID=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Example deposit amount (in USDC units, 1000000 = 1 USDC)
AMOUNT=1000000
