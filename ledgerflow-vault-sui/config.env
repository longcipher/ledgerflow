#!/bin/bash

# Environment configuration for LedgerFlow Sui Vault

# Network Configuration
export NETWORK="${NETWORK:-testnet}"

# USDC Contract Addresses
export USDC_TESTNET="0xa1ec7fc00a6f40db9693ad1415d0c193ad3906494428cf252621037bd7117e29::usdc::USDC"
export USDC_MAINNET="0xdba34672e30cb065b1f93e3ab55318768fd6fef66c15942c9f7cb846e2f900e7::usdc::USDC"

# System Object IDs
export CLOCK_ID="0x6"
export DENY_LIST_ID="0x403"

# Gas Configuration
export DEFAULT_GAS_BUDGET="100000000"  # 0.1 SUI

# URLs
export TESTNET_RPC="https://fullnode.testnet.sui.io:443"
export MAINNET_RPC="https://fullnode.mainnet.sui.io:443"

# Set USDC address based on network
if [ "$NETWORK" = "mainnet" ]; then
    export USDC_ADDRESS="$USDC_MAINNET"
    export RPC_URL="$MAINNET_RPC"
else
    export USDC_ADDRESS="$USDC_TESTNET"
    export RPC_URL="$TESTNET_RPC"
fi

echo "üåê Environment configured for $NETWORK"
echo "   USDC Address: $USDC_ADDRESS"
echo "   RPC URL: $RPC_URL"
